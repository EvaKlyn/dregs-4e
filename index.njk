layout: normpage.njk 
title: home 
---
{%- for post in collections.post | reverse -%}
    {% if loop.index0 < 3  %}  
        <h1>
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h1>
        
        <p>({{ post.date.toLocaleDateString('en-us', { weekday:"short", year:"numeric", month:"short", day:"numeric"}) }})</p>
        <article>
            {{ post.content | safe }}
        </article>
        <br><hr><br>
    {% endif %}
{%- endfor -%}